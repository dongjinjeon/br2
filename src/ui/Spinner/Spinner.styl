@keyframes spin {
	from {
		transform: rotate(360deg);
	}

	to {
		transform: rotate(0deg);
	}
}

.spinnerContainer {
	// display: block;
	width: 64px;
	height: 64px;
	position: relative;
	animation: spin 1.6s infinite;

	&:after {
		display: block;
		content: '';
		position: absolute;
		background: url('https://s2.coinmarketcap.com/static/img/coins/64x64/5604.png');
		background-size: cover;
		width: 40px;
		height: 40px;
		top: 9px;
		left: 10px;
	}
}
