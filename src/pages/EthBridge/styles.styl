
.headerBridge{
  display:flex;
  flex-direction:row;
  justify-content: space-between;
  align-items: flex-end;
}

.networkBox{
  flex-direction:column;
  min-width: 230px;
}

.largeButtonContainer {
  width: 270px
  height 100px

  background: #FFFFFF;
  box-shadow: 0px 10px 21px rgba(0, 173, 232, 0.13);
  border-radius: 4px;
  position relative

  opacity 0.6
  cursor pointer

  .imgToken {
    max-height 24px
    width 24px
    margin-right 10px
  }

  &.active {
    opacity 1

    &:after {
      display block
      position absolute
      content ''
      width: 100%
      height 4px
      bottom 0

      background: linear-gradient(269.98deg, #69FABC -0.02%, #00ADE8 100%);
    }
  }

  .title {
    font-weight bold
  }

  .description {
    //text-align right
    //width 100%
    //margin-right 60px
  }
}

.swapDirectionChoice {
  width: 560px
}

@media screen and (max-width: 800px) {

  .networkBox{
    flex-direction:column;
    min-width: 0px;
  }

  .headerBridge{
    flex-direction:column;
    align-items: flex-start;
  }

 

  .largeButtonContainer {
    width 50%
  }
  .swapDirectionChoice {
    width: 100%
  }
}
